<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="nl.multimedia_engineer.cwo_app">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        tools:ignore="GoogleAppIndexingWarning"
        android:theme="@style/AppTheme">
        <!--todo decide if any part of this should be indexable by google. -->

        <activity
            android:name=".TrainingActivity"
            android:label="@string/btn_nieuwe_training"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".EditCursistActivity"
            android:parentActivityName=".CursistDetailActivity"
            android:label="@string/cursist_wijzigen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CursistDetailActivity" />
        </activity>

        <activity
            android:name=".DiplomaUitgevenActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/btn_diploma_uitgeven">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".CursistenBehalenDiplomaActivity"
            android:label="@string/btn_diploma_uitgeven"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>


        <activity
            android:name=".CursistDetailActivity"
            android:label="@string/cursist"
            android:parentActivityName=".CursistListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CursistListActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".CursistBehaaldEisActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TrainingActivity" />
        </activity>

        <activity android:name=".CursistBehaaldDiplomaActivity" />

        <activity
            android:name=".CreateCursistActivity"
            android:label="@string/btn_nieuwe_cursist"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".DemandsPerDisciplineActivity" />
        <activity android:name=".CursistListActivity"
            android:label="@string/btn_cursisten_lijst"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTask">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".GroupActivity"
            android:label="@string/actionbar_title_groupActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTask">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" />
        </activity>

        <activity android:name=".CreateOrJoinGroupActivity"
            android:label="@string/actionbar_title_new_group_activity"
            android:parentActivityName=".GroupActivity"
            android:launchMode="singleTask">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".GroupActivity" />
        </activity>

        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTask"
            android:noHistory="true" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".notification.AlarmReceiver"
            android:process=":remote" />

        <service
            android:name=".notification.NotificationService"
            android:exported="false" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="nl.multimedia_engineer.cwo_app.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>